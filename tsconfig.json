{
    "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "strict": true,
      "declaration": true,
      "pretty": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "strictNullChecks": true,
      "outDir": "dist",
      "sourceMap": true
    },
    "include": ["src/*", "src/*/*"]
}
